<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <tech.tsdev.imagerepository.util.GlideImageView android:layout_width="50dp" android:layout_height="50dp"
                                                        tools:src="@mipmap/ic_launcher" android:id="@+id/img_user"/>

        <TextView
                android:id="@+id/tv_username"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                tools:text="Test" android:layout_toEndOf="@+id/img_user"/>

        <com.google.android.material.card.MaterialCardView
                android:layout_below="@+id/img_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/material_card_padding"
                android:translationZ="@dimen/material_card_padding"
                android:elevation="@dimen/material_card_padding">
            <tech.tsdev.imagerepository.util.GlideImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img_userUpload"
                    tools:src="@mipmap/ic_launcher"
                    android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>